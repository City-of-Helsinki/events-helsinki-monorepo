{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/test-utils": ["../config/tests/test-utils"],
      "@/config/*": ["./config/*"],
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@/backend/*": ["./backend/*"],
      "@/features/*": ["./features/*"],
      "@/pages/*": ["./pages/*"],
      "@/public/*": ["../public/*"],
      "@/themes/*": ["./themes/*"],
      "events-helsinki-common-i18n": [
        "../../../packages/common-i18n/src/index"
      ],
      "events-helsinki-common-i18n/locales/*": [
        "../../../packages/common-i18n/src/locales/*"
      ],
      "events-helsinki-ui-lib/*": ["../../../packages/ui-lib/src/*"],
      "events-helsinki-ui-lib": ["../../../packages/ui-lib/src/index"],
      "events-helsinki-core/*": ["../../../packages/core/src/*"],
      "events-helsinki-core": ["../../../packages/core/src/index"],
      "events-helsinki-components/*": ["../../../packages/components/src/*"],
      "events-helsinki-components": ["../../../packages/components/src/index"],
      "events-helsinki-api-gateway": [
        "../../../packages/api-gateway/src/index"
      ],
      "events-helsinki-db-main-prisma": [
        "../../../packages/db-main-prisma/src/index"
      ]
    }
    // "typeRoots": ["./", "./src/types.d"],
    // "types": ["vitest/globals"]
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": [
    "next-env.d.ts",
    "src/types.d/react-i18next.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ]
}
