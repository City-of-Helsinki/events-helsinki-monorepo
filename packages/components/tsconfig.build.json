{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "../../",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.stories.tsx", "**/*.stories.mdx", ".storybook/**", "dist", "**/__tests__/**"]
}
