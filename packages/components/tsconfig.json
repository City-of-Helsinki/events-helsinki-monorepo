{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/test-utils": ["../config/tests/test-utils"],
      "events-helsinki-core": ["../../../packages/core/src/index"],
      "events-helsinki-common-i18n": [
        "../../../packages/common-i18n/src/index"
      ],
      "events-helsinki-common-i18n/locales/*": [
        "../../../packages/common-i18n/src/locales/*"
      ]
    }
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build", "**/__tests__/*", "**/tests/*", "config"],
  "types": ["vitest/globals"]
}
