{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/test-utils": ["../config/tests/test-utils"],
      "events-helsinki-core/*": ["../../core/src/*"],
      "events-helsinki-core": ["../../core/src/index"],
      "events-helsinki-common-i18n": [
        "../../common-i18n/src/index"
      ],
      "events-helsinki-common-i18n/*": [
        "../../common-i18n/src/*"
      ]
    }
  },
  "include": [
    "src/types.d/*.d.ts",
  ],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build", "**/__tests__/*", "**/tests/*", "config"],
}
