{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "ES2020",
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@events-helsinki/core/*": ["../../../packages/core/src/*"],
      "@events-helsinki/core": ["../../../packages/core/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
