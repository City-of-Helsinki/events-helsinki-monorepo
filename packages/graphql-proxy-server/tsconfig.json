{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@events-helsinki/components": ["../components/src/index"],
      "@events-helsinki/components/*": ["../components/src/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
