{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler"
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "dist",
    "build"
  ]
}