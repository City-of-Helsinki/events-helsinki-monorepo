{
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "newLine": "lf",
    "types": [
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ]
}